<!-- Main component for a primary marketing message or call to action -->
<div class="jumbotron">
  <h2><%= msg_jumbotron %></h2>
</div>

<% @questions.each do |question| %>
  <%= form_with url: site_answer_path do |form| %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <span class="label label-info" style="margin-right: 10px">
            <% if user_signed_in? %>
              <%= link_to "|#{question.subject.language.language_name}|" %>
              <%= link_to  "#{question.subject.description}
                           (#{question.subject.questions_count})",
                                       site_search_subject_path(question.subject_id, question.subject.description), style: "color: white;" %>
            <% else %>
              <%= "#{question.subject.language.language_name} - #{question.subject.description} (#{question.subject.questions_count})" %>
            <% end %>
          </span>
          <%= question.description %>
        </h3>
      </div>
      <div class="panel-body">
        <ul>
          <% question.answers.each do |answer| %>
            <li style="list-style:none;">
              <div class="radio">
                <label>
                  <%= radio_button_tag 'answer_id', answer.id %>
                  <%= answer.description %>
                </label>
              </div>
            </li>
          <% end %>
          <li style="list-style:none;">
            <% if user_signed_in? %>
              <%= form.submit "Responder", class: "btn btn-default", id: "submit_#{question.id}" %>
            <% else %>
              <%= link_to "Responder", new_user_session_path, class: "btn btn-default", id: "submit_#{question.id}" %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  <% end %>
<% end %>

<% if user_signed_in? %>
  <div class="text-center">
    <%= paginate @questions %>
  </div>
<% else %>
