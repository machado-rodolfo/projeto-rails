var element = document.getElementById('submit_<%= @answer.question_id %>');

element.classList.remove('btn-default');
element.classList.remove('btn-success');
element.classList.remove('btn-danger');

<% if @already_answered %>
  element.classList.add('answered-btn');
  alert('Você já respondeu a esta pergunta.');
<% else %>
  element.classList.add('<%= @answer.correct ? "btn-success" : "btn-danger" %>');
  if (<%= @answer.correct %>) {
    $.bootstrapGrowl('Você acertou!', {
      type: 'success',
      align: 'center',
      allow_dismiss: true,
      stackup_spacing: 10
    });
  } else {
    $.bootstrapGrowl('Você ERROU!', {
      type: 'danger',
      align: 'center',
      allow_dismiss: true,.
      stackup_spacing: 10
    });
  }
<% end %>
