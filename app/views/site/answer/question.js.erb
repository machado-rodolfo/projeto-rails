var element = document.getElementById('submit_<%= @answer.question_id %>');

<% if @already_answered %>
  element.classList.add('answered-btn');
  alert('Você já respondeu a esta pergunta.');
<% else %>
  if (<%= @answer.correct %>) {
    element.classList.add('btn-success');
    $.bootstrapGrowl('Você acertou!', {
      type: 'success',
      align: 'center',
      allow_dismiss: true,
      stackup_spacing: 10
    });
  } else {
    element.classList.add('btn-danger');
    $.bootstrapGrowl('Você ERROU!', {
      type: 'danger',
      align: 'center',
      allow_dismiss: true,
      stackup_spacing: 10
    });
  }
<% end %>
