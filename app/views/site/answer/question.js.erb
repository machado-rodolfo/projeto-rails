var element = document.getElementById('submit_<%= @answer.question_id %>');

element.classList.remove('btn-default');
element.classList.remove('btn-success');
element.classList.remove('btn-danger');

<% if @already_answered %>
  element.classList.add('answered-btn');
  alert('Você já respondeu a esta pergunta.');
<% else %>
  element.classList.add('<%= @answer.correct ? "btn-success" : "btn-danger" %>');
  if (<%= @answer.correct %>) {
    $.bootstrapGrowl('Você acertou!', {
      type: 'success',
      align: 'center',
      allow_dismiss: true,
      stackup_spacing: 10
    });
  } else {
    $.bootstrapGrowl('Você ERROU!', {
      type: 'danger',
      align: 'center',
      allow_dismiss: true,
      stackup_spacing: 10
    });
  }
<% end %>

// Adicione o seguinte código para desabilitar o formulário após a resposta ser enviada
var form = element.closest('form');
if (form) {
  form.querySelectorAll('input[type="radio"]').forEach(function(input) {
    input.disabled = true;
  });
}
