<div>
  <a class="hiddenanchor" id="signin"></a>

  <div class="login_wrapper">
    <div class="animate form login_form">
      <section class="login_content">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <h1>Login</h1>
          <div>
            <%= f.email_field :email, autofocus: true, placeholder:"Email", class:"form-control" %>
          </div>

          <div>
            <%= f.password_field :password, placeholder:"Senha", class:"form-control" %>
          </div>

          <div style="display: flex; flex-direction: column; align-items: center;">
            <%= f.submit "Entrar", class: "btn btn-default submit", style: "width: 40%; margin-right: 0; margin-left:0;" %>
            <%= link_to "Esqueceu a sua senha?", new_user_password_path, class:"reset_pass", style:"margin-left: 0; margin-right: 0;" %>
          </div>


          <div class="clearfix"></div>

          <div class="separator"></div>
        <% end %>
      </section>
    </div>
  </div>
</div>
