<!DOCTYPE html>
<html lang="en">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>ProjetoRodolfo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application' %>
    <%= stylesheet_link_tag    'users_backoffice' %>

  </head>

  <body class="nav-md">
    <div class="container body">
      <div class="main_container">
        <div class="col-md-3 left_col menu_fixed">
          <div class="left_col scroll-view">
            <div class="navbar nav_title" style="border: 0;">
              <%= link_to begin_path, class: "site_title", style: "padding-left: 45px;" do %> Home Page
              <% end %>
            </div>

            <div class="clearfix"></div>

            <!-- menu profile quick info -->
            <div class="profile clearfix">
              <div class="profile_pic">
                <%= link_to image_tag(avatar_url, alt:"...", class:"img-circle profile_img", id:"imgAvatarMd"), '#', "data-toggle":"modal", "data-target":"#avatarModal" %>
              </div>
              <div class="profile_info">
                <span>Bem vindo,</span>
                <h2><%= current_user.full_name %></h2>
              </div>
            </div>
            <!-- /menu profile quick info -->

            <br />

            <!-- sidebar menu -->
            <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
              <div class="menu_section">
                <ul class="nav side-menu">
                  <li>
                    <%= link_to users_backoffice_welcome_index_path do %>
                      <i class="fa fa-home"></i>Início</a>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to users_backoffice_profile_path do %>
                      <i class="fa fa-user"></i>Dados do Perfil
                    <% end %>
                  </li>
                  <li>
                    <%= link_to site_welcome_index_path do %>
                      <i class="fa fa-gamepad"></i>Todas as Perguntas
                    <% end %>

                    <%= link_to users_backoffice_list_questions_path do %>
                      <i class="fa fa-language"></i> Perguntas por tópico
                    <% end %>

                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>

        <!-- top navigation -->
        <div class="top_nav">
          <div class="nav_menu">
            <nav>
              <div class="nav toggle">
                <a id="menu_toggle"><i class="fa fa-bars"></i></a>
              </div>

              <ul class="nav navbar-nav navbar-right">
                <li class="">
                  <a href="javascript:;" class="user-profile dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                    <%= image_tag avatar_url, alt:'', id:"imgAvatarSm" %>
                    <%= current_user.email %>
                    <span class=" fa fa-angle-down"></span>
                  </a>
                  <ul class="dropdown-menu dropdown-usermenu pull-right">
                    <li>
                      <%= link_to destroy_user_session_path, method: :delete do %>
                        <i class="fa fa-sign-out pull-right"></i>
                        Sair
                      <% end %>
                    </li>
                  </ul>
                </li>

                <li role="presentation" class="dropdown">
                  <ul id="menu1" class="dropdown-menu list-unstyled msg_list" role="menu">
                    <li>
                      <a>
                        <span class="image">
                          <%= image_tag 'images.png', alt:"Profile Image" %>
                        </span>
                      </a>
                    </li>
                    <li>
                      <a>
                        <span class="image">
                          <%= image_tag 'images.png', alt:"Profile Image" %>
                        </span>
                      </a>
                    </li>
                    <li>
                      <a>
                        <span class="image">
                          <%= image_tag 'images.png', alt:"Profile Image" %>
                        </span>

                      </a>
                    </li>
                    <li>
                      <a>
                        <span class="image">
                          <%= image_tag 'images.png', alt:"Profile Image" %>
                        </span>
                      </a>
                    </li>
                    <li>
                      <div class="text-center">
                        <a>
                          <i class="fa fa-angle-right"></i>
                        </a>
                      </div>
                    </li>
                  </ul>
                </li>
              </ul>
            </nav>
          </div>
        </div>
        <!-- /top navigation -->

        <!-- page content -->
        <div class="right_col" role="main">
          <div class="">
            <div class="page-title">
              <%= yield %>
            </div>
          </div>
        </div>
        <!-- /page content -->

        <!-- footer content -->
        <footer>
          <div class="pull-right">
          </div>
          <div class="clearfix"></div>
        </footer>
        <!-- /footer content -->
      </div>
    </div>

    <!-- Modal -->
      <div class="modal fade" id="avatarModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog modal-sm" role="document">
          <div class="modal-content">
            <%= form_with(url: users_backoffice_profile_path, model: current_user, class:"form-horizontal form-label-left") do |form| %>
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <h4 class="modal-title" id="myModalLabel">Avatar</h4>
            </div>
            <div class="modal-body">
              <%= form.fields_for :user_profile do |profile_form| %>
                <div class="form-group">
                  <%= profile_form.label :avatar %>
                  <%= image_tag(avatar_url, alt:"...", class:"img-circle profile_img", id:"imgAvatarLg") %>
                  <%= profile_form.file_field :avatar %>
                </div>
              <% end %>
            </div>
            <div class="modal-footer">
              <%= form.submit "Salvar", class:"btn btn-primary" %>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    <!-- /Modal -->

    <%= javascript_include_tag 'application' %>
    <%= javascript_include_tag 'users_backoffice' %>

        <% if notice %>
        <%= javascript_tag do %>
            $.bootstrapGrowl('<%= notice %>', {
            type: 'success', // (null, 'info', 'danger', 'success')
            align: 'center', // ('left', 'right', or 'center')
            allow_dismiss: true, // If true then will display a cross to close the popup.
            stackup_spacing: 10 // spacing between consecutively stacked growls.
            });
        <% end %>
    <% end %>

    <%= javascript_tag do %>
    $(function() {
      $('.datepicker').datepicker();
    });
    <% end %>
  </body>
</html>
