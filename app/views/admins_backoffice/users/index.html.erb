<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"><%= t('message.listing', model: @users.model_name.human(count: 2)) %></h1>
  </div>
    <!-- /.col-lg-12 -->
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th><%= translate_attribute(@users, :email) %></th>
                <th>
                  <%= link_to new_admins_backoffice_admin_path, class:"btn btn-success btn-circle" do %>
                    <i class="fa fa-plus"></i>
                  <% end %>
                </th>
            </tr>
        </thead>
        <tbody>
            <% @users.each do |user| %>
            <tr>
                <td> <%= user.id %> </td>
                <td> <%= user.email %> </td>
                <td style="width: 85px">

                  <%= link_to edit_admins_backoffice_user_path(user), class:"btn btn-primary btn-circle" do %>
                    <i class="fa fa-edit"></i>
                  <% end %>

                  <%= link_to admins_backoffice_user_path(user), method: :delete,
                      class:  "btn btn-danger btn-circle",
                      data:   { confirm: t('message.confirm_with', item: user.email) }  do %>
                    <i class="fa fa-minus"></i>
                  <% end %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>

</div>
