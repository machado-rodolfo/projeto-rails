  <%= render partial: 'admins_backoffice/questions/shared/form',
           locals: { question: @question,
                     action_message: 'Editando' } %>

  <% if action_name == 'edit' %>
    <p> ID: <%= @question.id %> </p>
    <p> Descrição: <%= @question.description %> </p>
    <p> Matéria: <%= @question.subject.description %> </p>
    <p> Criado em: <%= @question.created_at.strftime("%d/%m/%Y às %H:%M:%S") %> </p>
    <p> Atualizado em: <%= @question.updated_at.strftime("%d/%m/%Y às %H:%M:%S") %> </p>
  <% end %>
