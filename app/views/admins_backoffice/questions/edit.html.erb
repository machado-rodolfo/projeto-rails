  <%= render partial: 'admins_backoffice/subjects/shared/form',
           locals: { subject: @subject,
                     action_message: 'Editando' } %>

  <% if action_name == 'edit' %>
    <p> ID: <%= @subject.id %> </p>
    <p> Descrição: <%= @subject.description %> </p>
    <p> Criado em: <%= @subject.created_at.strftime("%d/%m/%Y às %H:%M:%S") %> </p>
    <p> Atualizado em: <%= @subject.updated_at.strftime("%d/%m/%Y às %H:%M:%S") %> </p>
  <% end %>
